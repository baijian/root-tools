<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Adcenter" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_adcenter</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Adcenter</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Adcenter</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Adcenter</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Adcenter</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Adcenter</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_adcenter</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_adcenter</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Adcenter</item>
    </style>

    <style name="ActionBar.Solid.Adcenter" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_background_textured_adcenter</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_adcenter</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_adcenter</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Adcenter</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle.Adcenter</item>
    </style>

    <style name="ActionBar.Transparent.Adcenter" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_adcenter</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Adcenter</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle.Adcenter</item>
    </style>

    <style name="PopupMenu.Adcenter" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_adcenter</item>
    </style>

    <style name="DropDownListView.Adcenter" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_adcenter</item>
    </style>

    <style name="ActionBarTabStyle.Adcenter" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_adcenter</item>
    </style>

    <style name="DropDownNav.Adcenter" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_adcenter</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_adcenter</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_adcenter</item>
    </style>

    <style name="ProgressBar.Adcenter" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_adcenter</item>
    </style>

    <style name="ActionButton.CloseMode.Adcenter" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_adcenter</item>
    </style>

    <style name="ActionBarTitle.Adcenter" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Adcenter.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Adcenter</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Adcenter</item>
    </style>

    <style name="Theme.HalfDialog.Adcenter" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@null</item>
    </style>



</resources>