<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:padding="8dip">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/layApp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" android:orientation="horizontal"
                    android:layout_marginTop="16dip">
                <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textSize="20sp"
                />
                <TextView
                        android:id="@+id/tvVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:layout_marginStart="16dip"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/tvIntro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|top"
                    android:layout_below="@+id/layApp"
                    android:layout_marginTop="8dip"/>

            <TextView android:layout_width="match_parent" android:layout_height="1dip"
                      android:id="@+id/tvSplit" android:background="@android:color/darker_gray"
                      android:layout_below="@+id/tvIntro"
                      android:layout_marginTop="8dip"/>
            <TextView
                    android:id="@+id/tvProj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/view_about_project_github"
                    android:layout_below="@+id/tvSplit"
                    android:layout_marginTop="8dip"
                    android:textColor="@android:color/holo_green_dark"
                    android:gravity="center"
                    android:padding="4dip"
                    android:focusable="true"
                    android:clickable="true"/>

            <TextView
                    android:id="@+id/tvThankTo"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="@string/view_about_thankto"
                    android:layout_below="@+id/tvProj"
                    android:gravity="center"
                    android:textColor="@android:color/holo_blue_dark"
                    android:padding="4dip"
                    android:layout_marginTop="8dip"/>
            <TextView
                    android:id="@+id/tvCoderStory"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="@string/view_about_thankto_coderstory"
                    android:padding="4dip"
                    android:gravity="center"
                    android:layout_below="@+id/tvThankTo"
                    android:textColor="@android:color/holo_blue_dark"
                    android:focusable="true"
                    android:clickable="true"/>
            <TextView
                    android:id="@+id/tvCoderStoryGithub"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="4dip"
                    android:gravity="center"
                    android:layout_below="@+id/tvCoderStory"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="@string/view_about_thankto_coderstory_github"
                    android:focusable="true"
                    android:clickable="true"/>

            <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="80dip" android:layout_height="80dip"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_launcher"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tvCoderStoryGithub"
                    android:layout_marginTop="16dip"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>